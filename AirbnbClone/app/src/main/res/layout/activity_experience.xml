<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="60dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.viewpager.widget.ViewPager
                    android:id="@+id/vp_experience"
                    android:layout_width="match_parent"
                    android:layout_height="460dp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp">

                    <ImageView
                        android:id="@+id/iv_house_back"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:src="@drawable/house_back_arrow" />

                    <ImageView
                        android:id="@+id/iv_house_share"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="20dp"
                        android:layout_toLeftOf="@id/iv_house_save"
                        android:src="@drawable/house_share" />

                    <ImageView
                        android:id="@+id/iv_experience_issave"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="20dp"
                        android:src="@drawable/house_save" />
                </RelativeLayout>
            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/black"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_experience_category"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="30dp"
                            android:text="나이트 라이프"
                            android:textColor="@color/colorPrimary"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/tv_experience_title"
                            style="@style/HouseHeadText"
                            android:text="로마에서 즐기는 송로버섯 체험"
                            android:textColor="@color/colorPrimary"
                            android:textSize="30sp" />

                        <TextView
                            android:id="@+id/tv_experience_evaluation"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="5.00 (3)"
                            android:textColor="@color/colorPrimary" />

                        <TextView
                            android:id="@+id/tv_experience_juso"
                            style="@style/ExperienceBasicWhiteText"
                            android:text="로마 이탈리아" />



                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="20dp"
                            android:background="@color/splitColor"
                            android:elevation="2dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="25dp">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="15dp"
                                    android:layout_height="15dp"
                                    android:src="@drawable/experience_playtime" />

                                <TextView
                                    style="@style/ExperienceGrayText"
                                    android:text="진행시간"
                                    android:textColor="@color/colorPrimary" />

                                <TextView
                                    android:id="@+id/tv_experience_playtime"
                                    style="@style/ExperienceBasicWhiteText"
                                    android:text="6시간" />

                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="15dp"
                                    android:layout_height="15dp"
                                    android:src="@drawable/experience_personnel" />

                                <TextView
                                    style="@style/ExperienceGrayText"
                                    android:text="그룹당 인원"
                                    android:textColor="@color/colorPrimary" />

                                <TextView
                                    android:id="@+id/tv_experience_personnel"
                                    style="@style/ExperienceBasicWhiteText"
                                    android:text="6시간" />

                            </LinearLayout>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_marginBottom="20dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="15dp"
                                    android:layout_height="15dp"
                                    android:src="@drawable/experience_inclusion" />

                                <TextView
                                    style="@style/ExperienceGrayText"
                                    android:text="포함사항"
                                    android:textColor="@color/colorPrimary" />

                                <TextView
                                    android:id="@+id/tv_experience_inclusion"
                                    style="@style/ExperienceBasicWhiteText"
                                    android:text="6시간" />

                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="15dp"
                                    android:layout_height="15dp"
                                    android:src="@drawable/experience_playtime" />

                                <TextView
                                    style="@style/ExperienceGrayText"
                                    android:text="제공 언어"
                                    android:textColor="@color/colorPrimary" />

                                <TextView
                                    android:id="@+id/tv_experience_offLanguage"
                                    style="@style/ExperienceBasicWhiteText"
                                    android:text="영어 일본어" />

                            </LinearLayout>


                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:orientation="vertical">

                <TextView
                    android:layout_marginTop="20dp"
                    style="@style/ExperienceTitleText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="프로그램" />


                <TextView
                    android:layout_marginTop="20dp"
                    android:id="@+id/tv_experinece_program"
                    style="@style/ExperienceBasicText"
                    android:maxLines="10"
                    android:text="프로그램입니다"
                    android:textSize="15sp"/>


                <TextView
                    style="@style/ExperienceTitleText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="10"
                    android:text="호스트" />


                <com.facebook.drawee.view.SimpleDraweeView
                    android:layout_marginTop="20dp"
                    android:id="@+id/sv_experience_host_img"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    app:roundAsCircle="true"/>

                <TextView
                    android:layout_marginTop="20dp"
                    android:id="@+id/tv_experience_host_name"
                    style="@style/TitleText"
                    android:text="Yuseke"/>

                <TextView
                    android:layout_marginTop="10dp"
                    android:id="@+id/tv_experience_host_introduce"
                    style="@style/ExperienceBasicText"
                    android:text="호스트 소개"/>

            </LinearLayout>

            <ImageView
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/experience_verified"
                android:scaleType="centerInside"
                android:adjustViewBounds="true"/>


        </LinearLayout>
    </androidx.core.widget.NestedScrollView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:layout_weight="3"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="요금을 확인하려면 날짜를 입력하세요" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="★ 4.78"
                android:textColor="@color/clickableText" />
        </LinearLayout>

        <Button
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="20dp"
            android:layout_weight="2"
            android:background="@drawable/shape_login_btn_clickable"
            android:text="날짜 입력" />
    </LinearLayout>


</RelativeLayout>