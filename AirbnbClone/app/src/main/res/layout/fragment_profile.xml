<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimary">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/sd_frag_profile_profile"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                fresco:roundAsCircle="true" />

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_toEndOf="@+id/sd_frag_profile_profile"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_frag_profile_username"
                    style="@style/TitleText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="UserName" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="프로필 보기" />

            </LinearLayout>



        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/splitColor"
            android:elevation="2dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_frag_profile_setting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:id="@+id/tv_frag_profile_userinfo"
                style="@style/FragProfileTitleText"
                android:text="개인정보" />

            <ImageView
                style="@style/FragProfileIV"
                android:layout_toEndOf="@+id/tv_frag_profile_userinfo"
                android:src="@drawable/profile_userinfo" />
        </RelativeLayout>


        <Button
            android:id="@+id/btn_frag_profile_logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="logout" />


    </LinearLayout>


</ScrollView>